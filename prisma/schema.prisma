// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model User {
  id           String       @id
  league_ign   String       @unique
  server       Server
  rank         Rank
  role         Role
  win          Int          @default(0)
  loss         Int          @default(0)
  elo          Int          @default(0)
  external_elo Int          @default(0)
  UserQueued   UserQueued[]
}

model Scrims {
  id         String       @id @default(uuid())
  queue      Queue        @relation(fields: [queue_id], references: [id])
  queue_id   String
  server     String
  status     Status
  UserQueued UserQueued[]
}

model Queue {
  id         String       @id @default(uuid())
  server     String       @unique
  UserQueued UserQueued[]
  Scrims     Scrims[]
}

model UserQueued {
  player    User    @relation(fields: [player_id], references: [id])
  player_id String
  queue     Queue   @relation(fields: [queue_id], references: [id])
  queue_id  String
  popped    Boolean @default(false)

  queuedAt DateTime @default(now())

  Scrims   Scrims? @relation(fields: [scrimsId], references: [id])
  scrimsId String?

  @@id([player_id, queue_id])
}

enum Status {
  INPROGRESS
  COMPLETED
  REMADE
}

enum Server {
  EUW
  NA
}

enum Rank {
  IRON
  BRONZE
  SILVER
  GOLD
  PLATINUM
  DIAMOND
  MASTER
  GRANDMASTER
  CHALLENGER
}

enum Role {
  TOP
  JUNGLE
  MID
  BOT
  SUPPORT
}
